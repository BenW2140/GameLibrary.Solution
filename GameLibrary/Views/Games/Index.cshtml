@{
  Layout = "_Layout";
}

@using GameLibrary.Models;
@model List<GameLibrary.Models.Game>

<h2>Games</h2>

@if (Model.Count == 0)
{
  <p>There are no games in the list!</p>
}
<ul>
  @foreach (Game game in Model)
  {
    <li>@Html.ActionLink($"{game.GameName}", "Details", new { id = game.GameId})</li>
  }
</ul>

<p>@Html.ActionLink("Add a game", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>